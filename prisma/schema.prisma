generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// -----------------------------------------------------
// ENUMS
// -----------------------------------------------------
enum Role {
  ADMIN
  HOD
  COORDINATOR
  STAFF
}

enum ExpenseStatus {
  PENDING
  VERIFIED
  APPROVED
  REJECTED
}

// -----------------------------------------------------
// MODELS
// -----------------------------------------------------

// ------------------------------
// Users
// ------------------------------
model User {
  id          String        @id @default(uuid())
  name        String
  email       String        @unique
  password    String
  role        Role          @default(STAFF)

  submittedExpenses Expense[] @relation("SubmittedExpenses")
  approvedExpenses  Expense[] @relation("ApprovedExpenses")

  createdAt   DateTime      @default(now())

  @@index([role])
  @@map("users")
}

// ------------------------------
// Budgets
// ------------------------------
model Budget {
  id         String           @id @default(uuid())
  year       Int
  proposed   Float
  allotted   Float
  variance   Float
  categories CategoryBudget[]
  createdAt  DateTime         @default(now())

  @@unique([year])
  @@map("budgets")
}

// ------------------------------
// Budget Categories
// ------------------------------
model CategoryBudget {
  id       String     @id @default(uuid())
  category String
  planned  Float
  spent    Float      @default(0)
  budgetId String
  budget   Budget     @relation(fields: [budgetId], references: [id])

  expenses Expense[]

  @@index([category])
  @@map("category_budgets")
}

// ------------------------------
// Expenses
// ------------------------------
model Expense {
  id           String         @id @default(uuid())
  amount       Float
  date         DateTime
  description  String?
  vendor       String?
  activity     String?

  receiptUrl   String?
  status       ExpenseStatus  @default(PENDING)

  // Relations expected by your API:
  categoryId   String
  category     CategoryBudget @relation(fields: [categoryId], references: [id])

  submittedById String
  submittedBy   User          @relation("SubmittedExpenses", fields: [submittedById], references: [id])

  approvedById  String?       
  approvedBy    User?         @relation("ApprovedExpenses", fields: [approvedById], references: [id])

  logs         ExpenseLog[]
  createdAt    DateTime       @default(now())

  @@index([status])
  @@index([submittedById])
  @@index([approvedById])
  @@map("expenses")
}

// ------------------------------
// Expense Log (Audit Trail)
// ------------------------------
model ExpenseLog {
  id        String   @id @default(uuid())
  expenseId String
  expense   Expense  @relation(fields: [expenseId], references: [id])
  action    String
  actor     String
  timestamp DateTime @default(now())

  @@index([expenseId])
  @@map("expense_logs")
}