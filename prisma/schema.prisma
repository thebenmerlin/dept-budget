generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// -----------------------------------------------------
// ENUMS
// -----------------------------------------------------
enum Role {
  ADMIN
  HOD
  COORDINATOR
  STAFF
}

enum ExpenseStatus {
  PENDING
  VERIFIED
  APPROVED
  REJECTED
}

enum ActivityType {
  MEETING
  PURCHASE
  EVENT
  TRAVEL
  OTHER
}

// -----------------------------------------------------
// MODELS
// -----------------------------------------------------

// ------------------------------
// Users
// ------------------------------
model User {
  id                String     @id @default(uuid())
  name              String
  email             String     @unique
  password          String
  role              Role       @default(STAFF)
  department        String?                 // selectable in API

  submittedExpenses Expense[]  @relation("SubmittedExpenses")
  approvedExpenses  Expense[]  @relation("ApprovedExpenses")

  createdAt         DateTime   @default(now())
  updatedAt         DateTime   @updatedAt

  @@index([role])
  @@map("users")
}

// ------------------------------
// Budgets
// ------------------------------
model Budget {
  id         String           @id @default(uuid())
  year       Int
  proposed   Float
  allotted   Float
  variance   Float
  categories CategoryBudget[]
  createdAt  DateTime         @default(now())
  updatedAt  DateTime         @updatedAt

  @@unique([year])
  @@map("budgets")
}

// ------------------------------
// Budget Categories
// ------------------------------
model CategoryBudget {
  id       String    @id @default(uuid())
  category String
  planned  Float
  spent    Float     @default(0)
  budgetId String
  budget   Budget    @relation(fields: [budgetId], references: [id])

  expenses Expense[]

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@index([category])
  @@unique([budgetId, category]) // prevent duplicate category names within the same budget
  @@map("category_budgets")
}

// ------------------------------
// Expenses
// ------------------------------
model Expense {
  id             String         @id @default(uuid())
  amount         Float
  date           DateTime
  description    String?
  vendor         String?
  activity       ActivityType?  // enum for strong typing

  receiptUrl     String?        // Cloudinary URL
  status         ExpenseStatus  @default(PENDING)

  // Relations expected by your API:
  categoryId     String
  category       CategoryBudget @relation(fields: [categoryId], references: [id])

  submittedById  String
  submittedBy    User           @relation("SubmittedExpenses", fields: [submittedById], references: [id])

  approvedById   String?
  approvedBy     User?          @relation("ApprovedExpenses", fields: [approvedById], references: [id])

  logs           ExpenseLog[]
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt

  @@index([status])
  @@index([submittedById])
  @@index([approvedById])
  @@map("expenses")
}

// ------------------------------
// Expense Log (Audit Trail)
// ------------------------------
model ExpenseLog {
  id         String   @id @default(uuid())
  expenseId  String
  expense    Expense  @relation(fields: [expenseId], references: [id])
  action     String
  actor      String
  timestamp  DateTime @default(now())

  @@index([expenseId])
  @@map("expense_logs")
}